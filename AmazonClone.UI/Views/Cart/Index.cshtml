@model Cart
@{
    ViewData["Title"] = "Cart";
}

<div class="d-flex mb-4">
    <div class="d-flex w-75">
        @foreach (var cartItem in Model.Items)
        {
            <div class="card w-100">
                <div class="card-title">
                    Shopping Cart
                </div>
                <div class="card-body d-flex justify-content-around">
                    <div>
                        <img src="~/images/computer-img.png"/>
                    </div>
                    <div>
                        <p>@cartItem.Product.NameEn</p>
                        <p>EGP @cartItem.Product.UnitPrice</p>
                        <p>Qty: @cartItem.ProductCount</p>
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="d-flex w-25">
        <div class="card">
            <p>
                Subtotal (@Model.Items.Sum(c=>c.ProductCount) Items): EGP @Model.TotalPrice

            </p>
            <a asp-action="Checkout">Procceed to Buy</a>
        </div>
        
    </div>
</div>